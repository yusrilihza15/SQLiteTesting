<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccff"
    android:padding="30dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rlTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/ivLogo"
            android:src="@drawable/logo"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />
        <TextView
            android:text="SQLite DEMO"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvText"
            android:text="VSGA TAHAP II"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <Button
        android:id="@+id/btUpgrade"
        android:text="Upgrade database"
        android:layout_marginTop="10dp"
        android:layout_below="@id/rlTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btInsert"
        android:layout_below="@id/btUpgrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Insert a friend"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/etId"
        android:hint="Insert A Friend"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btGetAllFriend"
        android:layout_width="120dp"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        tools:ignore="Autofill,HardcodedText,TextFields" />

    <Button
        android:id="@+id/btUpdate"
        android:layout_below="@id/etId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Update"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btDelete"
        android:layout_below="@id/btUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Delete Friend"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btGetAFriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btDelete"
        android:layout_marginTop="4dp"
        android:text="Get Friend"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btGetAllFriend"
        android:layout_below="@id/btInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Insert a friend"
        tools:ignore="HardcodedText" />

</RelativeLayout>